    nav.main_nav.sidebar       
      ul
        li
          a(ng-click='togglePersonalPages()') Elliott Regan
          ul.expando.slide_down(ng-if='personal_pages_visible')
            li(ng-click='togglePersonalPages()')
              a(href='#/settings', ng-click='toggleSidebar()')
                i.icon-cog
                | Settings
            li(ng-click='togglePersonalPages()')
              a(href='#/rewards', ng-click='toggleSidebar()')
                i.icon-trophy
                | Rewards
            li(ng-click='togglePersonalPages()')
              a(href='#/history', ng-click='toggleSidebar()')
                i.icon-chat
                | Conversations
        li.home
          a(href='#/account/all/campaign/camp0+camp1+camp2/conversations', ng-click='toggleSidebar()') Global Feed
        li(ng-repeat='account in accountList', ng-class='{selected : accountId == account.id}')
          a(href='#/account/{{account.id}}/dashboard', ng-click='toggleSidebar()')
            span(ng-bind='account.id')
      .tools
        button.btn.soft.new_handle + Create new account
