.scroller_wrapper
    .scroller
      h1(ng-bind='fdbkCampaign.title')
      form(action='')
        ol
          li(ng-repeat='question in fdbkCampaign.questionsList')
            //
              Start 'Multiple Choice' Template
            div(ng-show='question.type == \'multipleChoice\'')
              h3(ng-bind='question.text') Multiple-Choice
              ul.answers
                li.inline(ng-repeat='answer in question.answers')
                  input#answer_{{question.id}}{{answer.id}}(type='radio', name='answer_{{question.id}}')
                  label(for='answer_{{question.id}}{{answer.id}}', ng-bind='answer.text')
            //
              End 'Multiple Choice' Template
            //
              Start 'rating' Template
            div(ng-show='question.type == \'rating\'')
              h3(ng-bind='question.text')
              ul.answers
                li.inline(ng-repeat='answer in question.answers')
                  input#answer_{{question.id}}{{answer.id}}(type='radio', name='answer_{{question.id}}')
                  label(for='answer_{{question.id}}{{answer.id}}', ng-bind='answer.text')
            //
              End 'rating' Template
            //
              Start 'freeText' Template
            div(ng-show='question.type == \'freeText\'')
              h3(ng-bind='question.text')
              input(type='text', name='answer_{{question.id}}{{answer.id}}', ng-model='answer.text', placeholder='add an answer here.')
            //
              End 'freeText' Template
            //
              Start 'binary' Template
            div(ng-show='question.type == \'binary\'')
              h3(ng-bind='question.text')
              ul.answers
                li.inline(ng-repeat='answer in question.answers')
                  input#answer_{{question.id}}{{answer.id}}(type='radio', name='answer_{{question.id}}')
                  label(for='answer_{{question.id}}{{answer.id}}', ng-bind='answer.text')
            //
              End 'binary' Template
            //
              Start 'number' Template
            div(ng-show='question.type == \'number\'')
              h3(ng-bind='question.text')
              input(type='number', name='answer_{{question.id}}{{answer.id}}', ng-model='answer.text', placeholder='type your answer here.')
            //
              End 'number' Template
        fieldset.padded
          button.btn.full_width(type='submit') Share Feedback!
