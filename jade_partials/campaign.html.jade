header.app_header(ng-class='{no_bottom : campaignNav_true}')
  button.btn.icon.left.hide_large(ng-click='toggleSidebar(\'right\')')
    i.icon-menu
  hgroup.center
    h2 @
      span(ng-bind='campaignHandle')
    h1(ng-bind='campaignTitle')
  button.btn.icon.right(ng-click='toggleNavbar()', ng-switch='currentPage', ng-hide='multipleViewCampaigns')
    i.icon-down-open.sup
    i.icon-pencil(ng-switch-when='/edit')
    i.icon-chat(ng-switch-when='/conversations')
    i.icon-chart-bar(ng-switch-when='/analytics')
    i.icon-trophy(ng-switch-when='/rewards')
    i.icon-at(ng-switch-when='/contacts')
.dimmer(ng-if='campaignNav_true',ng-click='toggleNavbar(false)', ng-class='{dropdown_dimmer : campaignNav_true}')
nav.campaign_nav.dropdown(ng-if='campaignNav_true', ng-click='toggleNavbar()')
  ul
    li.feed
      a(href='#/account/{{accountId}}/campaign/{{campaignId}}/conversations')
        | Conversation Feed
        i.icon-chat
    li.analytics
      a(href='#/account/{{accountId}}/campaign/{{campaignId}}/analytics')
        | Analytics
        i.icon-chart-bar
    li.bonuses
      a(href='#/account/{{accountId}}/campaign/{{campaignId}}/rewards')
        | Bonuses
        i.icon-trophy
    li.contacts
      a(href='#/account/{{accountId}}/campaign/{{campaignId}}/contacts')
        | Contacts
        i.icon-at
    li.edit
      a(href='#/account/{{accountId}}/campaign/{{campaignId}}/edit')
        | Edit
        i.icon-pencils
ui-view.campaign_view.fade