.scroller_wrapper
  .scroller
    p(ng-if='viewCampaign.conversations.length == 0')
      | No conversations here. :(
      br
      button.btn Spread the word!
    ul.conversations
      li.instance.card(ng-repeat='instance in viewCampaign.conversations', ng-controller='instanceCtr', ng-include src="'partials/instance.html'")
ui-view.tools_panel.conversation_view(ng-class='{visible: conversationDetailView}')
.dimmer.conversations_dimmer(ng-if='conversationDetailView',ng-click='toggleToolPanel()')
